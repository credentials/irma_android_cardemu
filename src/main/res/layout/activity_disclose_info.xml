<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:padding="@dimen/detail_medium_vspace">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="For each of the categories listed below, the verifier accepts one of the following attributes. The icons indicate if you do or do not have this attribute."
                android:id="@+id/disjunction_content"
                android:layout_marginBottom="10dp"
                android:textSize="14sp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/disjunction_container"
                android:orientation="vertical">
        </LinearLayout>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back"
                android:id="@+id/button"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:onClick="onBackButtonTouch"/>
    </LinearLayout>
</ScrollView>
